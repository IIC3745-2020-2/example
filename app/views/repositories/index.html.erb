<h1>Repositories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Full Name</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.full_name %></td>
        <td><%= repository.url %></td>
        <td><%= link_to 'Show', repository %></td>
      </tr>
    <% end %>
  </tbody>
</table>
